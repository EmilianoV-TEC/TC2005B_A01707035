<%- include('includes/head.ejs') %>
      <div class="container">
        <div class="row titulo justify-content-center align-items-center" id="tituloLab">
            <div class="col-12"><div class="p-2 bg-light"><h1 class="text-center">Laboratorio con NPM</h1></div></div>
          </div>
  
          <div class="row justify-content-center">
            <div class="col-8 contenido p-3 mt-3 mb-2 bg-secondary text-white"><p class="text-center">Página simple con lista de productos nuevos ingresados</p></div>
          </div>
          
          <% if (ultimo_producto != '') {%>
          <div class="row justify-content-center">
            <div class="col-6 contenido p-2 mt-2 mb-1 bg-info text-white">
              <p class="text-center">
                El último producto agregado fue: <%= ultimo_producto %>
              </p>
            </div>
          </div>
          <% } %>

          <div class="row justify-content-center mt-5">
          <% if (productos.length > 0) { %>
            <% for(let producto of productos) {%>
              <div class="col-4 p-2 text-center">
                <div class="bg-light">
                 <h2 class="text-center"><%= producto.nombre %></h2>
                 <p class="text-center">Precio: <%= producto.precio %>$</p>
                 <a class="text-center" href="/productos/datos/<%= producto.id_producto %>">Editar</a>
                 <br>
                 <img src="../<%= producto.imagen_producto %>" class="img-thumbnail">
                 </div>
              </div>
            <% } %>
          <% } else {%>
            <h2>No hay productos registrados</h2>
          <% } %>
          </div>

          <div class="row justify-content-center">
            <div class="col-4 contenido p-3 mt-3 mb-2 bg-white text-white text-center"><a class="text-center" href="/productos/nuevo">Agregar producto</a></div>
          </div>

      </div>

<%- include('includes/footer.ejs') %>
        
